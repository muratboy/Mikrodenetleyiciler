TRISB=%00000000
i var byte
portB=~1	'yani portb=%11111110
pause 50
i=1

label:
    i=i<<1
    portB=~i
    pause 50
    if i=128 then
        GOTO label_2
    endif
goto label
label_2:
    i=i>>1
    portB=~i
    pause 50
    if i=1 then
        goto label
    endif
goto label_2

